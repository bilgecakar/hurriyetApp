<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical">

    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            app:cardBackgroundColor="@color/cardview_light_background"
            app:cardCornerRadius="6dp"
            android:layout_margin="10dp">
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <TextView
                android:id="@+id/editorTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="13dp"
                android:fontFamily="Roboto-Condensed bold"
                android:textColor="@color/titleText"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_margin="5sp"/>

        <TextView
                android:id="@+id/editorName"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="6dp"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="50dp"
                android:layout_marginEnd="205dp"
                android:layout_marginRight="205dp"
                android:layout_marginBottom="31dp"
                android:fontFamily="Roboto-Condensed"
                android:textSize="14sp"
                android:textStyle="bold" />
        <TextView
                android:id="@+id/c_date"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="50dp"
                android:layout_marginEnd="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="31dp"
                android:fontFamily="Roboto-Light"
                android:textSize="14sp"
                android:textStyle="italic" />

    </RelativeLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>
